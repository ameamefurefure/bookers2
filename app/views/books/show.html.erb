<h1>Books#show</h1>
<p>Find me in app/views/books/show.html.erb</p>

<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <!--共通化の呼び出し-->
        <!--render [部分テンプレートファイルの指定], [ローカル変数]:[渡す値] %>-->
        <%= render 'list', user: @user %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tr>
            <td>
              <%= link_to user_path(@book) do%><!--user(bookのuser_idと同じidの)へのリンク-->
                <%= image_tag @book.user.get_profile_image(100,100) %><!--「app2-17章参照」-->
                <br><%= @user.name %>
              <% end%>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td><!--link_to 表示させる文字, URL-->
            <td><%= @book.body %></td>
            <% if @user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-sm btn-success edit_book_path' %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm"=>"本当に削除しますか？", class: 'btn btn-sm btn-danger destroy_book_path' %></td>
            <% end %>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>