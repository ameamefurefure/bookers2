<h1>Books#edit</h1>
<p>Find me in app/views/books/index.html.erb</p>

<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
        <table class="table">
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </table>
      </div>
      
      <h2>New book</h2>
      <%= form_with model: Book.new do |f| %>
        <div class="field">
          <h4>Title</h4>
          <%= f.text_field :title %>
        </div>
        <div class="field">
          <h4>Opinion</h4>
          <%= f.text_area :body %>
        </div>
        <div class="actions">
          <%= f.submit 'Create Book', class:"btn btn-success" %>
        </div>
      <% end %>
      
      <div class="col-md-8 offset-md-1"></div>
    </div>
  </div>
</main>