<h1>Books#edit</h1>
<p>Find me in app/views/books/edit.html.erb</p>

<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>Editing Book</h2>
        <% if @book.errors.any? %>
          <%= @book.errors.count %>errors prohibited this obj from being saved:
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>


        <%= form_with model: @book do |f| %>
          <div class="form-group">
            <!--<label for="book_title"Title></label>-->
            <!--<input class="form-control book_title", type="text", value="">-->
            <h6>Title</h6>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <h6>Opinion</h6>
            <%= f.text_area :body %>
          </div>
          <div class="form-group">
            <%= f.submit 'Update Book', class: 'btn btn-success'%>
          </div>
        <% end%>
        <%= link_to 'Show', book_path(@book) %><!--link_to 表示させる文字, URL-->
        |
        <%= link_to 'Back', books_path %><!--link_to 表示させる文字, URL-->
      </div>
    </div>
  </div>
</main>