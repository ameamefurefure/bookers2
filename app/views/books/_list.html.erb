<h2>User info</h2>
<%= image_tag user.get_profile_image(100,100) %><!--部分テンプレートの為、@userの@除去-->
<table class="table">
  <tr></tr>
  <tr>
    <th>name</th>
    <th><%= user.name %></th><!--部分テンプレートの為、@userの@除去-->
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th><!--部分テンプレートの為、@userの@除去-->
  </tr>
</table>

<div class="row">
  <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block edit_user_path' do %>
  <i class="fas fa-user-cog"></i>
  <% end %>
</div>

<h2>New book</h2>
<%= form_with model: book do |f| %><!--部分テンプレートの為、@bookの@除去-->
  <div class="field">
    <h6>Title</h6>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <h6>Opinion</h6>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Book', class:"btn btn-success" %>
  </div>
<% end %>