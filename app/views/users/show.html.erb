<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>

<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <!--共通化の呼び出し-->
        <!--render [部分テンプレートファイルの指定], [ローカル変数]:[渡す値] %>-->
        <%= render 'books/list', user: @user, book: @book %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %><!--@books=Book.all(全て取得)の内容をbookに一つずつ当てはめてく-->
          <tr>
            <td>
              <%= image_tag book.user.get_profile_image(100,100) %>　<!--「app2-17章参照」-->
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td><!--link_to 表示させる文字, URL-->
            <td><%= book.body %></td>
          </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>